extends ./layout.jade
include ./mixins.jade

block vars
    - var title= 'Prismic Starter'
    - var bodyclass= 'front-page'

block body
    div.blog-header.home
        div.container
            h1.blog-title Prismic Starter
            p.lead.blog-description Site description

    div.container.blog-main

        each post in docs.results
            +blogpost(post)
        else
            | Sorry, no posts matched your criteria.

        if docs.prev_page
            a(href='/?page=#{docs.page - 1}') « Previous Page

        if docs.next_page
            a(href='/?page=#{docs.page + 1}') Next Page »
