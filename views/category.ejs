<% layout('layout') -%>

<% block('bodyclass', "front-page") %>

<div class="blog-header" style="
    <% if (category.getImageView('category.illustration', 'main')) { %>
    background-image: url(<%= category.getImageView('category.illustration', 'main').url %>)
    <% } %>
    ">
    <div class="container">
        <h1 class="blog-title"><%= category.getText('category.name') %></h1>
    </div>
</div>

<div class="container blog-main">

    <% for(var i=0; i < docs.results.length; i++) { %>
    <%- partial('content', { post: docs.results[i] }) %>
    <% } %>
    <% if (docs.results.length == 0) { %>
    Sorry, no posts matched your criteria.
    <% } %>

    <?php previous_posts_link() ?>

    <?php next_posts_link() ?>

</div>

